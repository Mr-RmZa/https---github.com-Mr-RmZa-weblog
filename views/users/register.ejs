<%- include('../includes/header') %>
<article>
  <div class="container">
    <div class="row">
      <div class="col">
        <%- include('../includes/massage') %>
        <form action="/admin/register" method="post">
          <div class="mb-3">
            <div class="form-floating">
              <input
                type="search"
                class="form-control text-dark"
                id="fullName"
                placeholder="Full Name"
                name="fullName"
                required
              />
              <label for="fullName" class="text-muted">Full Name</label>
            </div>
          </div>
          <div class="mb-3">
            <div class="form-floating">
              <input
                type="email"
                class="form-control text-dark"
                id="email"
                placeholder="Email"
                name="email"
                required
              />
              <label for="email" class="text-muted">Email</label>
            </div>
          </div>
          <div class="mb-3">
            <div class="form-floating">
              <input
                type="password"
                class="form-control text-dark"
                id="password"
                placeholder="Password"
                name="password"
                required
              />
              <label for="password" class="text-muted">Password</label>
            </div>
          </div>
          <div class="mb-3">
            <div class="form-floating">
              <input
                type="password"
                class="form-control text-dark"
                id="confirmPassword"
                placeholder="Confirm Password"
                name="confirmPassword"
                required
              />
              <label for="confirmPassword" class="text-muted"
                >Confirm Password</label
              >
            </div>
          </div>
          <div class="mb-3">
            <div class="row">
              <div class="col">
                <img src="/captcha" alt="captcha" class="bg-white" />
              </div>
              <div class="col">
                <div class="form-floating">
                  <input
                    type="search"
                    class="form-control text-dark"
                    id="captcha"
                    placeholder="Captcha"
                    name="captcha"
                    required
                  />
                  <label for="captcha" class="text-muted">Captcha</label>
                </div>
              </div>
            </div>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn btn-outline-primary">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</article>
<%- include('../includes/footer') %>
